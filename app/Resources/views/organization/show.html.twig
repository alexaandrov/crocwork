{% extends 'base.html.twig' %}

{% block content %}
    <h1>Organization</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ organization.id }}</td>
            </tr>
            <tr>
                <th>Displayname</th>
                <td>{{ organization.displayName }}</td>
            </tr>
            <tr>
                <th>Ogrn</th>
                <td>{{ organization.ogrn }}</td>
            </tr>
            <tr>
                <th>Oktmo</th>
                <td>{{ organization.oktmo }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('app_organization_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('app_organization_edit', { 'id': organization.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
